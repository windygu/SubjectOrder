        <style>

            .form-cell label {
                width: 22%;
            }

            .form-cell-con select {
                border: none;
                width: 99%;
                outline: none;
                box-sizing: border;
                padding: 5px;
                margin-bottom: 0px;
            }

            .tc-chks {
                height: auto;
            }

                .tc-chks .form-cell-con {
                    border: none;
                    width: auto;
                    margin-top: 7px;
                }

                    .tc-chks .form-cell-con label {
                        width: 100%;
                        display: block;
                        text-align: left;
                        float: none;
                        line-height: 1.5;
                        vertical-align: middle;
                    }

                    .tc-chks .form-cell-con input {
                        width: auto;
                        float: none;
                        line-height: 1;
                        height: auto;
                        margin-right: 5px;
                        display: inline-block;
                    }
