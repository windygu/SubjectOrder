                <div class="form-cell clearfix">
                    <label for="" class="required">地区</label>
                    <div class="form-cell-con">
                        <input type="text" id="city-picker" placeholder="请选择地区" data-type="city" required readonly name="city" />
                    </div>
                </div>
                <div class="form-cell clearfix">
                    <label for="" class="required">地址</label>
                    <div class="form-cell-con">
                        <input type="text" placeholder="" required data-type="address" name="address" id="address">
                    </div>
                </div>

