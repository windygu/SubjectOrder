        <div style="margin:20px 0 0 0">
            <form action="/" id="buyForm">
                <div class="form-cell tc-chks clearfix">
                    <label for="" class="required">产品</label>
                    <div class="form-cell-con">
                        <label><input type="radio" name="tc" checked value="388" t="套餐一: 1瓶 388元">套餐一: 1瓶 388元</label>
                        <label><input type="radio" name="tc" value="688" t="套餐二: 2瓶 688元">套餐二: 2瓶 688元</label>
                        <label><input type="radio" name="tc" value="2088" t="套餐三: 1箱(六瓶) 1988元">套餐三: 1箱(六瓶) 1988元</label>
                    </div>
                </div>
                <div class="form-cell clearfix">
                    <label for="" class="required">数量</label>
                    <div class="form-cell-con clearfix sum-box" style="width:30%;padding:0 15px;">
                        <div class="reduce">-</div>
                        <input type="text" required value="1" data-type="count" name="count" id="count">
                        <div class="add">+</div>
                    </div>
                </div>
                <div class="form-cell clearfix">
                    <label for="" class="required">姓名</label>
                    <div class="form-cell-con">
                        <input type="text" placeholder="" required data-type="name" name="name" id="name">
                    </div>
                </div>
                <div class="form-cell clearfix">
                    <label for="" class="required">手机</label>
                    <div class="form-cell-con">
                        <input type="text" placeholder="" required data-type="tel" name="tel" id="tel">
                    </div>
                </div>
                @*<div class="form-cell code clearfix" style="display:none">
